<p id="notice"><%= notice %></p>

<p> <%= link_to 'New Cocktail', new_cocktail_path %> </p>


  <% @cocktails.reverse.each do |cocktail| %>

    <%= cocktail.name %>
      <ul>
      <% cocktail.doses.each do |d|%>

      <li><%= d.ingredient.name %> -> <%= d.description %></li>

      <% end %>
      </ul>

    <p><%= link_to 'Edit', edit_cocktail_path(cocktail) %>
    <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>

